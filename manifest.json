{
  "manifest_version": 3,
  "name": "Marionette Companion",
  "version": "1.2",
  "description": "Connects the Marionette interface to a self-hosted server agent.",
  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*.dystopi.cc/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injector.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
